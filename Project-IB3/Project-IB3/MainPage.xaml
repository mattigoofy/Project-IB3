<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_IB3.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="toInfoScreenButton"
                    Text="To info screen"
                    Priority="0"
                    Order="Primary"
                    Clicked="toInfoScreenButton_Clicked" /> 

        <ToolbarItem Text="Log Out"
                     Priority="1"
                     Order="Primary"
                     Clicked="OnLogoutClicked" />

    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Move the robot"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Grid
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*"
                Padding="30">

                <Button
                    x:Name="moveForwardButton"
                    Text="^"
                    Clicked="moveForward"
                    Grid.Row="1"
                    Grid.Column="1"/>

                <Button
                    x:Name="moveLeftButton"
                    Text="&lt;"
                    Clicked="moveLeftButton_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>

                <Button
                    x:Name="moveRightButton"
                    Text="&gt;"
                    Clicked="moveRightButton_Clicked"
                    Grid.Row="2"
                    Grid.Column="2"/>

                <Button
                    x:Name="moveBackwardsButton"
                    Text="\/"
                    Clicked="moveBackwards"
                    Grid.Row="4"
                    Grid.Column="1"/>

            </Grid>

