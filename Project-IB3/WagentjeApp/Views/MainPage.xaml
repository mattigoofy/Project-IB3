<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WagentjeApp.Views.MainPage"
             Title="Wagentje App">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Log Out"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnLogoutClicked" />

    </ContentPage.ToolbarItems>
    
    <StackLayout Padding="20">
        <Label Text="Welkom bij Wagentje App!"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Traject Aanmaken"
                Clicked="OnCreateTrajectClicked" />
        <Button Text="Live Traject Besturen"
                Clicked="OnLiveTrajectClicked" />
        <Button Text="Live Metingen Bekijken"
                Clicked="OnLiveMetingenClicked" />
        <Button Text="Manuele Metingen"
                Clicked="OnManualMeasurementsClicked" />
    </StackLayout>
</ContentPage>